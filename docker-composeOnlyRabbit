
services:
  rabbitmq:
    image: rabbitmq:4.0-management
    container_name: ducktasks-rabbitmq
    ports:
      - "5672:5672"
      - "15672:15672"
      - "15692:15692"
    environment:
      RABBITMQ_DEFAULT_USER: guest
      RABBITMQ_DEFAULT_PASS: guest
    volumes:
      - rabbitmq_data:/var/lib/rabbitmq
    networks:
      - backend-net

volumes:
  rabbitmq_data:

networks:
  backend-net:
